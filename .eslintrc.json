{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "import/extensions": [ 
            "error", 
            "ignorePackages", 
            { "": "never" } 
        ],
        "no-unused-vars": "off",
        "no-console": "off",
        "no-sequences": "off",
        "no-plusplus": "off",
        "class-methods-use-this": "off"
   },
   "parserOptions": {
    "ecmaversion": 2018,
    "sourceType": "module"
   }
}